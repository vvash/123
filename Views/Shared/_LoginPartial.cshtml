@using Microsoft.AspNet.Identity

<style>

.dropdown {
    position: relative;
    display: inline-block;
    padding-top:5px;
    float:right;
}
img{
    border-radius:50%;
}

.dropdown-content {
    display: none;
    position: absolute;
    background-color: whitesmoke;
    min-width: 120px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
}

.dropdown:hover .dropdown-content {
    display: block;
}

.desc {
    padding: 15px;
    text-align: center;
}


.custom-nav li{
    margin: 0 0 5px 0;
    padding:10px;
    color:black;
}
.custom-nav a{
    color:black;
    text-decoration:none;
    font-size:14px;
}

    .custom-nav > li:hover,
    .custom-nav > li:focus {
        background-color: rgba(0,0,0,0.2);
    }
</style>

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

    <div class="dropdown">
        <img src="Content/user.png" width="40" height="40">
        <div class="dropdown-content">
            <ul class="custom-nav">
                <li>@Html.ActionLink("Home", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log Out</a></li>
            </ul>
        </div>
    </div>
   }
}
else
{
    <div class="dropdown">
        <img src="~/Content/user.png"  width="40" height="40">
        <div class="dropdown-content">
            <ul class="custom-nav">
                <li>@Html.ActionLink("Sign up", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "viewDialog", data_dialog_title = "Log in" })</li>
            </ul>
        </div>
    </div>
}
