@using NewsBlog.Models;
@using PagedList.Mvc;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - &ltNewsBlog&gt</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='@Url.Content("~/Content/themes/base/all.css")' rel="stylesheet" type="text/css" />
    <script src="http://vk.com/js/api/openapi.js" type="text/javascript"></script>
    
    <style>
        header{
            height:200px;
        }
        header table{
           padding-left:200px;
        }

        body{
            padding-top:10px;
        }

        .navbar-default{
            background-color:#162135;
        }

       ul.nav a { color: #fff !important; 
                  font-size:14px;
       }

      .navbar-default .navbar-nav > li > a:hover,
      .navbar-default .navbar-nav > li > a:focus {
          background-color: #307ab3;
          color: #000000;
}

    </style>
</head>
<body>
    <img style="all: unset" src="~/Content/main_logo.png" />

    
    
    <div class="navbar navbar-default">
        <div class="container">

            <div class="navbar-header">
                
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
             </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Main page", "Index", "Home")</li>
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Admin", "Admin", "Home")</li>
                        <li>@Html.ActionLink("Add an article", "Create", "Articles")</li>
                    }
                    
                </ul>
                <div id="innerSearch">
                    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
                    {
                        <input type="text" name="search" placeholder="Search" id="search">
                        <button id="searchbtn" type="submit" value="Search" class="btn btn-link">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                        </button>
                    }
                </div>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
       

    </div>
  
    <div class="container" style="max-width :100%; padding:15px; background-color:#eef3fb">
       
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryUI")
    @RenderSection("scripts", required: false)

    <script data-main="Scripts/app/main" src="~/Scripts/Require.js"></script>
    <a href="#" class="scrollup">Up</a>
</body>
</html>
